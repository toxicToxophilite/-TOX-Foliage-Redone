<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="PlantBase">
    <defName>Tox_BrightbellsPot</defName>
    <label>Brightbells</label>
    <description>A symbotic relationship between a hardy plant and a bioluminescent fungus. The plant gains nutrients from the fungus and photosynthesizes from the light, and the fungus feeds off the fibrous material of the leaves that don't need to collect sunlight.</description>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Beauty>10</Beauty>
      <Nutrition>0.01</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/Brightbells</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <uiIconScale>0.5</uiIconScale>
    <plant>
      <sowWork>200</sowWork>
	<sowTags>
	    <li>Decorative</li>
	</sowTags>
      <growDays>2.5</growDays>
      <visualSizeRange>0.40~0.65</visualSizeRange>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <lifespanDaysPerGrowDays>8</lifespanDaysPerGrowDays>
    </plant>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(255,255,255,0)</glowColor>
      </li>
    </comps>
  </ThingDef>

</Defs>

<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<ThingDef ParentName="CavePlantBase">
    <defName>Tox_Stonelotus</defName>
    <label>Stone Lotus</label>
    <description>A beautiful flower growing out of cracks in the stone inside caves.</description>
    <statBases>
      <MaxHitPoints>15</MaxHitPoints>
      <Flammability>0.3</Flammability>
      <Beauty>40</Beauty>
      <Nutrition>0.00000001</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/StoneLotus/Mature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <volume>(0.3, 0.3, 0.3)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <fillPercent>0.20</fillPercent>
    <pathCost>15</pathCost>
    <plant>
      <immatureGraphicPath>Plants/StoneLotus/Immature</immatureGraphicPath>
      <fertilityMin>0.0</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <topWindExposure>0.1</topWindExposure>
      <harvestMinGrowth>0.90</harvestMinGrowth>
      <harvestWork>100</harvestWork>
      <harvestTag>Standard</harvestTag>
      <harvestAfterGrowth>0</harvestAfterGrowth>
      <visualSizeRange>0.5~1.05</visualSizeRange>
      <growDays>1</growDays>
      <sowTags>
        <li>Decorative</li>
        <li>Ground</li>
      </sowTags>
    </plant>
<comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(187,229,235,0)</glowColor>
      </li>
    </comps>
  </ThingDef>
	

  
</Defs>

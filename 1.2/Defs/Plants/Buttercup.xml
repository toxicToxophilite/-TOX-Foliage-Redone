<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Tox_Buttercup</defName>
    <label>buttercups</label>
    <description>Buttercups are a beautiful but highly toxic wildflower. The plant's taste is so acrid that animals won't even try eating them.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>12</Beauty>
      <Nutrition>0.00000001</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/Buttercup</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
     <plant>
		<dieIfLeafless>true</dieIfLeafless>
		<harvestTag>Standard</harvestTag>
		<sowWork>800</sowWork>
		<sowTags>
			<li>Ground</li>
		</sowTags>
		<growMinGlow>0.3</growMinGlow>
		<topWindExposure>0.1</topWindExposure>
		<growDays>1.5</growDays>
		<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
		<visualSizeRange>0.3~0.8</visualSizeRange>
                <maxMeshCount>4</maxMeshCount>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
		</plant>
	</ThingDef>


</Defs>
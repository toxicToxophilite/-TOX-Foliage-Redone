<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Strawberry"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Plants/Strawberry/Mature</texPath>
      		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	  </value>
	</Operation>

<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Strawberry"]/plant</xpath>
	  <value>
	    <plant>
      <growDays>4.6</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawBerries</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowMinSkill>5</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <immatureGraphicPath>Plants/Strawberry/Immature</immatureGraphicPath>
      <maxMeshCount>9</maxMeshCount>
      <visualSizeRange>0.3~0.8</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Food</purpose>
    	    </plant>
	  </value>
	</Operation>


</Patch>
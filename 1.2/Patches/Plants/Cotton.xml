<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Cotton"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Plants/Cotton/Mature</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	  </value>
	</Operation>

<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Cotton"]/plant</xpath>
	  <value>
	    <plant>
      <immatureGraphicPath>Plants/Cotton/Immature</immatureGraphicPath>
      <growDays>8</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Cloth</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
	  </value>
	</Operation>


</Patch>
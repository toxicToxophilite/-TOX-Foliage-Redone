<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Hops"]/graphicData</xpath>
	  <value>
	    <graphicData>
		  <texPath>Plants/Hops/Mature</texPath>
		  <graphicClass>Graphic_Random</graphicClass>
		</graphicData>
	  </value>
	</Operation>

<Operation Class="PatchOperationReplace">
	  <xpath>*/ThingDef[defName = "Plant_Hops"]/plant</xpath>
	  <value>
	    <plant>
      <immatureGraphicPath>Plants/Hops/Immature</immatureGraphicPath>
      <fertilitySensitivity>0.7</fertilitySensitivity>
      <growDays>5</growDays>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawHops</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowMinSkill>3</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.01</topWindExposure>
      <visualSizeRange>1.3~1.05</visualSizeRange>
      <wildOrder>2</wildOrder>
    </plant>
	  </value>
	</Operation>


</Patch>